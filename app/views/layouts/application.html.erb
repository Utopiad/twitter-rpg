<!DOCTYPE html>
<html>
  <head>
    <title>TwitterRpg</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><script>Materialize.toast("<%= notice %>", 4000, 'rounded')</script></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><script>Materialize.toast("<%= alert %>", 4000, 'rounded red')</script></p>
    <% end %>

    <% if user_signed_in? %>
    <nav>
      <div class="menu-wrapper">
        <a href="#!" class="brand-logo"></a>
        <ul class="right">
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.name%><i class="i i-menu"></i></a></li>
          <ul id="dropdown1" class="dropdown-content">
            <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
        </ul>
        </ul>
      </div>
    </nav>
    <% end %>

    <%= yield %>

  </body>
</html>
